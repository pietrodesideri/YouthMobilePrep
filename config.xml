<widget xmlns = "http://www.w3.org/ns/widgets"
		xmlns:gap = "http://phonegap.com/ns/1.0"
		id        = "cf.hamzajirah.youthmobileprep"
		versionCode="1"
		version   = "1.0.0">
	<name>
		YouthMobile Prep
	</name>
	<description>
		Help anyone aspiring to learn the basics of HTML, CSS and JavaScript for Mobile/Web development.		
	</description>
	<author href="http://hamzajirah.cf" email="hamzajirah@gmail.com">
		Jirah Hamza Ibrahim
	</author>
	<platform name="android"/>
	<!-- preferences -->
	<content src="index.html"/>
	<preference name="SplashScreen" value="screen"/>
	<preference name="SplashScreenDelay" value="5000"/>
	<preference name="SplashMaintainAspectRatio" value="false"/>
	<preference name="SplashShowOnlyFirstTime" value="false" />
	<preference name="android-minSdkVersion" value="19"/>
	<preference name="android-maxSdkVersion" value="28"/>
	<preference name="android-targetSdkVersion" value="21"/>
	<preference name="orientation" value="portrait"/>

	<!-- plugin -->
	<plugin name="cordova-plugin-splashscreen" spec="~5.0.2" source="npm"/>

	<!-- splash screen -->
	<splash src="res/screen/android/splash-port-ldpi.png" platform="android" qualifier="port-ldpi"/>
	<splash src="res/screen/android/splash-port-mdpi.png" platform="android" qualifier="port-mdpi"/>
	<splash src="res/screen/android/splash-port-hdpi.png" platform="android" qualifier="port-hdpi"/>
	<splash src="res/screen/android/splash-port-xhdpi.png" platform="android" qualifier="port-xhdpi"/>
	<splash src="res/screen/android/splash-port-xxhdpi.png" platform="android" qualifier="port-xxhdpi"/>
	<splash src="res/screen/android/splash-port-xxxhdpi.png" platform="android" qualifier="port-xxxhdpi"/>
	<splash src="splash.png"/>
	
	<!-- icons -->
	<icon src="res/icon/android/ldpi.png" platform="android" qualifier="ldpi"/>
	<icon src="res/icon/android/mdpi.png" platform="android" qualifier="mdpi"/>
	<icon src="res/icon/android/hdpi.png" platform="android" qualifier="hdpi"/>
	<icon src="res/icon/android/xhdpi.png" platform="android" qualifier="xhdpi"/>
	<icon src="res/icon/android/xxhdpi.png" platform="android" qualifier="xxhdpi"/>
	<icon src="res/icon/android/xxxhdpi.png" platform="android" qualifier="xxxhdpi"/>
	<icon src="icon.png"/>
</widget>